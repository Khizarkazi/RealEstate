@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Inquiry";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">📝 Submit a New Inquiry</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-4">
                            <label for="message" class="form-label fw-semibold">Your Message <span class="text-danger">*</span></label>
                            <textarea name="message"
                                      id="message"
                                      class="form-control"
                                      rows="5"
                                      placeholder="Type your concern or question here..."
                                      required></textarea>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success px-4">
                                📩 Submit Inquiry
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-muted small mt-3 text-center">
                Please allow 1–2 business days for a response from our team.
            </div>
        </div>
    </div>
</div>