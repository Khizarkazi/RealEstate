@model IEnumerable<RealEstate.Models.Appointment>

@{
    Layout = "_Layout";
    ViewData["Title"] = "My Appointments";
}

<h2>My Appointments</h2>

@if (!Model.Any())
{
    <p>No appointments found.</p>
}
else
{
    <div class="row">
        @foreach (var appointment in Model)
        {
            <div class="card col-md-4 m-2 p-3">
                <h4>Property ID: @appointment.PropertyId</h4>
                <p><strong>Appointment Date:</strong> @appointment.AppointmentDate.ToString("dd MMM yyyy")</p>
                <p><strong>Status:</strong> @appointment.Status</p>
                <p><strong>Preferred Slots:</strong> @appointment.PreferredSlots</p>
                <p><strong>Agent Remark:</strong> @(string.IsNullOrEmpty(appointment.AgentRemark) ? "No remarks yet" : appointment.AgentRemark)</p>
            </div>
        }
    </div>
}







