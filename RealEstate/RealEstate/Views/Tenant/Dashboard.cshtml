@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

<section class="container py-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="fw-bold">👤 Tenant Dashboard</h2>
            <p class="text-muted">Welcome back! Manage your lease, payments, and profile all in one place.</p>
        </div>
    </div>

    <div class="row g-4">

        <!-- Lease Agreements -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white"
                 onmouseover="this.classList.add('shadow-lg')"
                 onmouseout="this.classList.remove('shadow-lg')">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 fs-1">📄</div>
                    <h5 class="card-title fw-bold">Active Lease Agreements</h5>
                    <p class="card-text text-muted">View your current rental agreements and terms.</p>
                    <a asp-controller="LeaseAgreement" asp-action="MyLeases" class="btn btn-primary mt-auto">View</a>
                </div>
            </div>
        </div>

        <!-- Rent History -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white"
                 onmouseover="this.classList.add('shadow-lg')"
                 onmouseout="this.classList.remove('shadow-lg')">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 fs-1">💳</div>
                    <h5 class="card-title fw-bold">Rent Payment History</h5>
                    <p class="card-text text-muted">Check your past rent payments and status.</p>
                    <a asp-controller="Transaction" asp-action="History" class="btn btn-success mt-auto">Track</a>
                </div>
            </div>
        </div>

        <!-- Rent Due Notifications -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white"
                 onmouseover="this.classList.add('shadow-lg')"
                 onmouseout="this.classList.remove('shadow-lg')">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 fs-1">📢</div>
                    <h5 class="card-title fw-bold">Rent Due Notifications</h5>
                    <p class="card-text text-muted">Get alerts for upcoming rent deadlines.</p>
                    <a asp-controller="LeaseAgreement" asp-action="RentAlerts" class="btn btn-warning mt-auto text-white">Alerts</a>
                </div>
            </div>
        </div>

        <!-- Report Issues -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white"
                 onmouseover="this.classList.add('shadow-lg')"
                 onmouseout="this.classList.remove('shadow-lg')">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 fs-1">🛠️</div>
                    <h5 class="card-title fw-bold">Report Inquiries</h5>
                    <p class="card-text text-muted">Report property-related problems to your manager.</p>
                    <a asp-controller="Inquiry" asp-action="Create" class="btn btn-danger mt-auto">Report Inquiry</a>
                </div>
            </div>
        </div>

        <!-- View Issues -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white"
                 onmouseover="this.classList.add('shadow-lg')"
                 onmouseout="this.classList.remove('shadow-lg')">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 fs-1">🛠️</div>
                    <h5 class="card-title fw-bold">View Inquiries</h5>
                    <p class="card-text text-muted">Report property-related problems to your manager.</p>
                    <a asp-controller="Inquiry" asp-action="MyInquiries" class="btn btn-danger mt-auto">View Inquiry</a>
                </div>
            </div>
        </div>

        <!-- Edit Profile -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white"
                 onmouseover="this.classList.add('shadow-lg')"
                 onmouseout="this.classList.remove('shadow-lg')">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 fs-1">👤</div>
                    <h5 class="card-title fw-bold">Edit Profile</h5>
                    <p class="card-text text-muted">Manage your personal details and settings.</p>
                    <a asp-controller="StartingPage" asp-action="EditProfile" class="btn btn-dark mt-auto">Edit</a>
                </div>
            </div>
        </div>

        <!-- Book Appoinment -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white"
                 onmouseover="this.classList.add('shadow-lg')"
                 onmouseout="this.classList.remove('shadow-lg')">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 fs-1">👤</div>
                    <h5 class="card-title fw-bold">Appointment</h5>
                    <p class="card-text text-muted">Book the Appointment</p>

                    <a asp-controller="Appointment" asp-action="AddAppointment" class="btn btn-primary mt-auto">
                        Book Appointment
                    </a>
                </div>
            </div>
        </div>

    </div>
</section>



