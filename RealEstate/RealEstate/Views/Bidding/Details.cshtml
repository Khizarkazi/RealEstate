@using RealEstate.ViewModel
@model BidViewModel
@{
    ViewData["Title"] = "Property Bidding";
}

<h2>@Model.Property.Title</h2>
<p><strong>Admin Price:</strong> ₹@Model.Property.Price</p>
<p><strong>Description:</strong> @Model.Property.Description</p>

<hr />

<h3>Place a Bid</h3>

<form asp-action="PlaceBid" method="post">
    <input type="hidden" name="propertyId" value="@Model.Property.PropertyId" />
    <div class="form-group">
        <label>Enter your bid amount (must be greater than base price and current bid)</label>
        <input type="number" name="yourBidAmount" class="form-control" step="1000" min="@Model.Property.Price" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Place Bid</button>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}

<hr />

<h3>Previous Bids</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Bidder</th>
            <th>Bid Amount</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bid in Model.Bids)
        {
            <tr>
                <td>@bid.User.FirstName @bid.User.LastName</td>
                <td>₹@bid.BidAmount</td>
                <td>@bid.BidTime</td>
            </tr>
        }
    </tbody>
</table>
