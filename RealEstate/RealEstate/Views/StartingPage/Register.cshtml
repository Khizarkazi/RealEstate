@model ProfilePicView

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="Smarthr - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, html5, responsive, Projects">
    <meta name="author" content="Dreams technologies - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Register</title>

    <link rel="icon" href="~/content/logregis/img/core-img/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="~/content/logregis/assets/img/apple-touch-icon.png">
    <link rel="stylesheet" href="~/content/logregis/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/content/logregis/assets/plugins/icons/feather/feather.css">
    <link rel="stylesheet" href="~/content/logregis/assets/plugins/tabler-icons/tabler-icons.css">
    <link rel="stylesheet" href="~/content/logregis/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/content/logregis/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/content/logregis/assets/css/style.css">
</head>

<body class="bg-white">
    <div class="main-wrapper">
        <div class="container-fluid">
            <div class="row vh-100">
                <div class="col-lg-5 d-none d-lg-flex align-items-center justify-content-center bg-primary-transparent">
                    <img src="~/content/logregis/img/bg-img/feature6.jpg" alt="Img" style="width: 100%; height: 100%;">
                </div>

                <div class="col-lg-7 col-md-12 d-flex align-items-center">
                    <div class="col-md-8 mx-auto">
                        <div class="text-center mb-4">
                            <h2>Sign Up</h2>
                            <p>Please enter your details to sign up</p>
                        </div>

                        @* Start of form *@
                        @* <form asp-action="Register" asp-controller="StartingPage" method="post" enctype="multipart/form-data"> *@

                        <form method="post" enctype="multipart/form-data">
                            @* @Html.ValidationSummary(true, "", new { @class = "text-danger" }) *@
                            <span asp-validation-summary="All" class="text-danger"></span>

                            <div class="mb-3">
                                <label  class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                @* @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" }) *@
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>


                            <div class="mb-3">
                                <label  class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                               @*  @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" }) *@
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label  class="form-label">Email Address</label>
                                <input asp-for="Email" class="form-control" />
                                @* @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" }) *@
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label  class="form-label">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                @* @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" }) *@
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label  class="form-label">Role</label>
                                <select asp-for="Role" class="form-select">
                                    <option value="">Select Role</option>
                                    <option>Admin</option>
                                    <option>Agent</option>
                                    <option>Buyer</option>
                                    <option>Seller</option>
                                    <option>Tenant</option>
                                </select>
                                @* @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" }) *@
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label  class="form-label">Profile Picture</label>
                                <input asp-for="ProfilePicture" type="file" class="form-control" />
                                @* @Html.ValidationMessageFor(model => model.ProfilePicture, "", new { @class = "text-danger" }) *@
                                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input asp-for="PasswordHash" type="password" class="form-control" />
                                @* @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" }) *@
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>

                            @* <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="agreeTerms" required />
                                <label class="form-check-label" for="agreeTerms">Agree to <span class="text-primary">Terms & Privacy</span></label>
                            </div> *@

                            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                        </form>

                        <div class="text-center mt-3">
                            <p>Already have an account? <a asp-controller="StartingPage" asp-action="Login">Sign In</a></p>
                        </div>

                        <div class="login-or my-3 text-center">
                            <span class="span-or">Or</span>
                        </div>

                        <div class="text-center">
                            <a href="javascript:void(0);" class="btn btn-outline-light border d-flex justify-content-center">
                                <img src="~/content/logregis/assets/img/icons/google-logo.svg" alt="Google" class="img-fluid me-2" style="height: 20px;"> Sign up with Google
                            </a>
                        </div>

                        <div class="text-center mt-4">
                            <p>&copy; 2025 - <a asp-controller="StartingPage" asp-action="Index">RealEstate</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/content/logregis/assets/js/jquery-3.7.1.min.js"></script>
    <script src="~/content/logregis/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/content/logregis/assets/js/feather.min.js"></script>
    <script src="~/content/logregis/assets/js/script.js"></script>




    @section scripts
    {
        <partial name="_ValidationScriptsPartial"></partial>
    }


</body>

</html>
