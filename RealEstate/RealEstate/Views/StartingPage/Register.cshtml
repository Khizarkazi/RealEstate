<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="Smarthr - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, html5, responsive, Projects">
    <meta name="author" content="Dreams technologies - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title></title>

    <!-- Favicon -->
    <link rel="icon" href="~/content/logregis/img/core-img/favicon.ico">

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/content/logregis/assets/img/apple-touch-icon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/content/logregis/assets/css/bootstrap.min.css">

    <!-- Feather CSS -->
    <link rel="stylesheet" href="~/content/logregis/assets/plugins/icons/feather/feather.css">

    <!-- Tabler Icon CSS -->
    <link rel="stylesheet" href="~/content/logregis/assets/plugins/tabler-icons/tabler-icons.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/content/logregis/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/content/logregis/assets/plugins/fontawesome/css/all.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/content/logregis/assets/css/style.css">

</head>

<body class="bg-white">

    <div id="global-loader" style="display: none;">
        <div class="page-loader"></div>
    </div>

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <div class="container-fuild">
            <div class="w-100 overflow-hidden position-relative flex-wrap d-block vh-100">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="d-lg-flex align-items-center justify-content-center d-none flex-wrap vh-100 bg-primary-transparent">
                            <div style="width: 100%; height: 100%;">
                                <img style="width: 100%; height: 100%;" src="~/content/logregis/img/bg-img/feature6.jpg" alt="Img">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-12 col-sm-12">
                        <div class="row justify-content-center align-items-center vh-100 overflow-auto flex-wrap">
                            <div class="col-md-7 mx-auto vh-100">
                                <form action="register.html" method="post" enctype="multipart/form-data" class="vh-100">
                                    <div class="vh-100 d-flex flex-column justify-content-between p-4 pb-0">
                                        <div class="mx-auto mb-5 text-center">
                                            <!-- <img src="assets/img/logo.svg" class="img-fluid" alt="Logo"> -->
                                        </div>
                                        <div class="">
                                            <div class="text-center mb-3">
                                                <h2 class="mb-2">Sign Up</h2>
                                                <p class="mb-0">Please enter your details to sign up</p>
                                            </div>

                                            <!-- First Name -->
                                            <div class="mb-3">
                                                <label class="form-label">First Name</label>
                                                <div class="input-group">
                                                    <input type="text" name="FirstName" class="form-control border-end-0" required>
                                                    <span class="input-group-text border-start-0">
                                                        <i class="ti ti-user"></i>
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Last Name -->
                                            <div class="mb-3">
                                                <label class="form-label">Last Name</label>
                                                <div class="input-group">
                                                    <input type="text" name="LastName" class="form-control border-end-0" required>
                                                    <span class="input-group-text border-start-0">
                                                        <i class="ti ti-user"></i>
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Email Address -->
                                            <div class="mb-3">
                                                <label class="form-label">Email Address</label>
                                                <div class="input-group">
                                                    <input type="email" name="Email" class="form-control border-end-0" required>
                                                    <span class="input-group-text border-start-0">
                                                        <i class="ti ti-mail"></i>
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Phone Number -->
                                            <div class="mb-3">
                                                <label class="form-label">Phone Number</label>
                                                <div class="input-group">
                                                    <input type="text" name="PhoneNumber" class="form-control border-end-0">
                                                    <span class="input-group-text border-start-0">
                                                        <i class="ti ti-phone"></i>
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Role -->
                                            <div class="mb-3">
                                                <label class="form-label">Role</label>
                                                <select class="form-select" name="Role" required>
                                                    <option value="" disabled selected>Select Role</option>
                                                    <option value="Admin">Admin</option>
                                                    <option value="Agent">Agent</option>
                                                    <option value="Buyer">Buyer</option>
                                                    <option value="Seller">Seller</option>
                                                    <option value="Tenant">Tenant</option>
                                                </select>
                                            </div>

                                            <!-- Profile Picture -->
                                            <div class="mb-3">
                                                <label class="form-label">Profile Picture</label>
                                                <input type="file" name="ProfilePicture" class="form-control">
                                            </div>

                                            <!-- Password -->
                                            <div class="mb-3">
                                                <label class="form-label">Password</label>
                                                <div class="pass-group">
                                                    <input type="password" name="Password" class="pass-input form-control" required>
                                                    <span class="ti toggle-password ti-eye-off"></span>
                                                </div>
                                            </div>

                                            <!-- Confirm Password -->
                                            <div class="mb-3">
                                                <label class="form-label">Confirm Password</label>
                                                <div class="pass-group">
                                                    <input type="password" name="ConfirmPassword" class="pass-inputs form-control" required>
                                                    <span class="ti toggle-passwords ti-eye-off"></span>
                                                </div>
                                            </div>

                                            <!-- Terms & Privacy -->
                                            <div class="d-flex align-items-center justify-content-between mb-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="form-check form-check-md mb-0">
                                                        <input class="form-check-input" id="remember_me" type="checkbox" required>
                                                        <label for="remember_me" class="form-check-label text-dark mt-0">
                                                            Agree to <span class="text-primary">Terms & Privacy</span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Submit Button -->
                                            <div class="mb-3">
                                                <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                                            </div>

                                            <!-- Already have an account -->
                                            <div class="text-center">
                                                <h6 class="fw-normal text-dark mb-0">
                                                    Already have an account?
                                                    <a asp-controller="StartingPage" asp-action="Login" class="hover-a">Sign In</a>
                                                </h6>
                                            </div>

                                            <!-- OR -->
                                            <div class="login-or">
                                                <span class="span-or">Or</span>
                                            </div>

                                            <!-- Google Login (placeholder) -->
                                            <div class="mt-2">
                                                <div class="d-flex align-items-center justify-content-center flex-wrap">
                                                    <div class="text-center me-2 flex-fill">
                                                        <a href="javascript:void(0);"
                                                           class="br-10 p-2 btn btn-outline-light border d-flex align-items-center justify-content-center">
                                                            <img class="img-fluid m-1" src="~/content/logregis/assets/img/icons/google-logo.svg" alt="Google">
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Footer -->
                                        <div class="mt-5 pb-4 text-center">
                                            <p class="mb-0 text-gray-9">Copyright &copy; 2025 - <a asp-controller="StartingPage" asp-action="Index">RealEstate</a></p>
                                        </div>
                                    </div>
                                </form>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/content/logregis/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/content/logregis/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Icon JS -->
    <script src="~/content/logregis/assets/js/feather.min.js"></script>

    <!-- Custom JS -->
    <script src="~/content/logregis/assets/js/script.js"></script>

</body>

</html>